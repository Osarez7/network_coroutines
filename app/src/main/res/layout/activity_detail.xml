<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.DetailActivity">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars[12]"
            android:id="@+id/img_character" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:scaleType="fitXY"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/img_character"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:text="Movie Title" app:layout_constraintHorizontal_bias="0.0" android:fontFamily="@font/galdeano"
            android:textSize="24sp" android:textColor="@android:color/background_dark"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_description"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:text="Movie description "
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_label_overview"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:fontFamily="@font/galdeano" android:textSize="18sp"/>
    <TextView
            android:text="Overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_label_overview" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/img_character" android:fontFamily="@font/galdeano"
            android:lineSpacingExtra="18sp" android:textColor="@android:color/background_dark" android:textSize="24sp"/>
    <TextView
            android:text="Revenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_label_revenue"
            android:fontFamily="@font/galdeano" android:textStyle="bold"
            android:textColor="@android:color/background_dark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" app:layout_constraintStart_toEndOf="@+id/img_character"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_revenue" tools:text="100000"
            app:layout_constraintStart_toEndOf="@+id/txt_label_revenue"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" android:fontFamily="@font/galdeano"
            android:textStyle="bold"/>
    <TextView
            android:text="Runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_label_runtime" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_label_revenue"
            app:layout_constraintStart_toEndOf="@+id/img_character" android:layout_marginStart="8dp"
            android:textStyle="bold" android:textColor="@android:color/background_dark"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_runtime"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_revenue"
            app:layout_constraintStart_toEndOf="@+id/txt_label_runtime"
            android:layout_marginStart="16dp" tools:text="15 min" android:fontFamily="@font/galdeano"
            android:textStyle="bold"/>
    <TextView
            android:text="Vote Average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_label_vote_average" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_label_runtime"
            app:layout_constraintStart_toEndOf="@+id/img_character" android:layout_marginStart="8dp"
            android:textColor="@android:color/background_dark" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vote_average" app:layout_constraintStart_toEndOf="@+id/txt_label_vote_average"
            android:layout_marginStart="8dp"
            tools:text="5"
            android:fontFamily="@font/galdeano"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txt_label_vote_average"/>
</androidx.constraintlayout.widget.ConstraintLayout>